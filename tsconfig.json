{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/",
    "target": "es6",
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "module": "es6",
    "moduleResolution": "node",
    "alwaysStrict": false,
    "allowJs": false,
    "jsx": "preserve",
    "lib": ["es6", "es7", "dom"],
    "paths": {
      "utils": ["./src/utils"],
      "models": ["./src/models"],
      "static": ["./src/static"],
      "common": ["./src/app/common"]
    }
  },
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": true
  },
  "include": ["src", "typings"]
}
